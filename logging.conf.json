{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "file": {
      "format": "%(levelname)s|%(name)s|%(asctime)s|%(message)s|%(filename)s|%(lineno)d|%(funcName)s|%(module)s|%(process)d|%(processName)s|%(thread)d|%(threadName)s|%(taskName)s"
    },
    "json": {
      "()": "src.utils.logKit.formatters.JSONLogFormatter",
      "include_keys": [
        "created",
        "message",
        "levelname",
        "name",
        "filename",
        "module",
        "exc_info",
        "lineno",
        "threadName",
        "processName",
        "taskName",
        "args",
        "context"
      ]
    },
    "console": {
      "format": "%(message)s",
      "datefmt": "[%X]"
    }
  },
  "filters": {
    "max_level_info": {
      "()": "src.utils.logKit.filters.MaxLevelFilter",
      "max_level": "WARNING"
    }
  },
  "handlers": {
    "console": {
      "()": "src.utils.logKit.handlers.MyRichHandler",
      "formatter": "console",
      "rich_tracebacks": false,
      "tracebacks_show_locals": false,
      "show_time": true,
      "show_level": true,
      "omit_repeated_times": false,
      "markup": false,
      "enable_link_path": true,
      "show_path": true,
      "file": "stdout",
      "level": "DEBUG",
      "filters":["max_level_info"]
    },
    "file_produtos": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "json",
      "filename": "logs/log_produtos.jsonl",
      "maxBytes": 5242880,
      "backupCount": 5,
      "encoding": "utf-8",
      "level": "DEBUG",
      "filters":["max_level_info"]
    },
    "file_estoque": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "json",
      "filename": "logs/log_estoque.jsonl",
      "maxBytes": 5242880,
      "backupCount": 5,
      "encoding": "utf-8",
      "level": "DEBUG",
      "filters":["max_level_info"]
    },
    "file_cliente": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "json",
      "filename": "logs/log_clientes.jsonl",
      "maxBytes": 5242880,
      "backupCount": 5,
      "encoding": "utf-8",
      "level": "DEBUG",
      "filters":["max_level_info"]
    },
    "file_vendas": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "json",
      "filename": "logs/log_vendas.jsonl",
      "maxBytes": 5242880,
      "backupCount": 5,
      "encoding": "utf-8",
      "level": "DEBUG",
      "filters":["max_level_info"]
    },
    "file_auth": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "json",
      "filename": "logs/log_auth.jsonl",
      "maxBytes": 5242880,
      "backupCount": 5,
      "encoding": "utf-8",
      "level": "DEBUG",
      "filters":["max_level_info"]
    },
    "file_erros": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "json",
      "filename": "logs/log_erros.jsonl",
      "maxBytes": 5242880,
      "backupCount": 5,
      "encoding": "utf-8",
      "level": "ERROR"
    },
    "queue": {
      "class": "logging.handlers.QueueHandler",
      "handlers": [
        "file_produtos", "file_estoque", "file_erros","file_vendas","file_cliente","console"
      ]
    }
  },
  "root": {
    "handlers": ["file_erros"]
  },
  "loggers": {
    "LoggerProdutoController": {
      "handlers": [
        "file_produtos"
      ],
      "level": "DEBUG",
      "propagate": true
    },
    "LoggerEstoqueController": {
      "handlers": [
        "file_estoque"
      ],
      "level": "DEBUG",
      "propagate": true
    },
    "LoggerVendasController": {
      "handlers": [
        "file_vendas"
      ],
      "level": "DEBUG",
      "propagate": true
    },
    "loggerClienteController": {
      "handlers": [
        "file_cliente"
      ],
      "level": "DEBUG",
      "propagate": true
    },
    "LoggerAuthController": {
      "handlers": ["file_auth"],
      "level": "DEBUG",
      "propagate": true
    },
    "LoggerAuth": {
      "handlers": ["file_erros"],
      "level": "WARNING",
      "propagate": true
    },
    "LoggerCliente": {
      "handlers": ["file_erros"],
      "level": "WARNING",
      "propagate": true
    },
    "LoggerEstoque": {
      "handlers": ["file_erros"],
      "level": "WARNING",
      "propagate": true
    },
    "LoggerProduto": {
      "handlers": ["file_erros"],
      "level": "WARNING",
      "propagate": true
    },
    "LoggerVendas": {
      "handlers": ["file_erros"],
      "level": "WARNING",
      "propagate": true
    }
  }
}