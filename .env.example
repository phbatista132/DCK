# ==================== AMBIENTE ====================
ENVIRONMENT=production
DEBUG=False

# ==================== API ====================
API_HOST=0.0.0.0
API_PORT=8000

# ==================== JWT ====================
JWT_SECRET_KEY=sua-chave-super-secreta-aqui-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== BANCO DE DADOS ====================
# PostgreSQL (Railway fornece automaticamente)
DATABASE_URL=postgresql://user:password@host:5432/railway

# Pool de conex√µes
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ==================== LOGGING (Railway) ====================
LOGS_DIR=logs
LOGGING_CONFIG_JSON=logging.conf.json
SETUP_LOGGER_NAME=config_setup
SETUP_LOGGER_LEVEL=WARNING
DEFAULT_LOGGER_LEVEL=WARNING

# ==================== CRIPTOGRAFIA ====================
FERNET_KEY_PATH=data/.secret_key